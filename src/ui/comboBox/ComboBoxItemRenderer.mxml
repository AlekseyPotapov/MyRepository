<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				rollOver="{currentState = 'hovered'}"
				rollOut="{currentState = 'normal'}"
				width="300"
				autoDrawBackground="false">
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>

	<!-- fill -->
	<s:Group width="100%" height="100%">
		
		<!--<s:Rect left="0" right="0" top="0" bottom="0" radiusX="2" radiusY="2">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color.over="0xefefef" color.down="0xa1a1a1" alpha.up="0"/>
					<s:GradientEntry color.over="0xd1d1d2" color.down="0xaeaeae" alpha.up="0"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		-->
	</s:Group>
	
	<s:HGroup>
		<s:BitmapImage source="{data.pic}" />
		<s:Label fontSize="11" fontWeight="bold" text="{data.text}" textAlign="center"
				 verticalAlign="middle"/>
	</s:HGroup>
</s:ItemRenderer>
