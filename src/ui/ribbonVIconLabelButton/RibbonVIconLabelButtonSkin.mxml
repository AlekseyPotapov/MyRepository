<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   alpha.disabled="0.3">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	
	<s:VGroup gap="4">
		<!--<s:mask> -->
			<s:Group width="100%">
				
				<s:Group horizontalCenter="0">
					<s:BitmapImage source="{getStyle('icon2Display')}" verticalCenter="0" horizontalCenter="0" left="1" right="1" top="2" bottom="2"/>
					<s:Rect left="1" right="1" top="1" bottom="1" radiusX="0" radiusY="0">
						<s:fill>
							<s:LinearGradient rotation="90">
								<s:GradientEntry color.over="0xfffbe8" alpha.over="0.6" color.down="0xa1a1a1" alpha.up="0" alpha.disabled="0"/>
								<s:GradientEntry color.over="0xffd356" alpha.over="0.6" color.down="0xaeaeae" alpha.up="0" alpha.disabled="0"/>
							</s:LinearGradient>
						</s:fill>
						<!--<s:stroke>
							<s:SolidColorStroke color.over="0xb3b3b3" color.down="0x828282" alpha.up="0" alpha.disabled="0"/>
						</s:stroke> -->
						
					</s:Rect>
					
				</s:Group>
				
			</s:Group>	
		<!--</s:mask> -->
		
		
		
		<s:Label id="labelDisplay"
				 textAlign="center"
				 verticalAlign="middle"
				 maxDisplayedLines="1"
				 horizontalCenter="0" verticalCenter="1"
				 top="2" bottom="2"
				 fontSize="10.5"/>
			
	</s:VGroup>
	
</s:SparkButtonSkin>
